import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;
class Rectangle{
    void area(int w, int h){
        System.out.printf("Area of the Rectangle is %.2f\n",(float)(w*h));
    }
    void perimeter(int w, int h){
         System.out.printf("Perimeter of the Rectangle is %.2f",(float)(2*(w+h)));
    }
    
}
public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner sc=new Scanner(System.in);
        int w=sc.nextInt();
        int h=sc.nextInt();
        if(w<=10 && h<=10){
        Rectangle obj=new Rectangle();
            System.out.println("Here your Answers!!!");
        
        obj.area(w,h);
        obj.perimeter(w,h);
    }
    else{
        System.out.println("Hello User,Kindly Enter the valid Input.");
    }
        
  }
    }   
